<% layout('layout') %>

<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="text-center text-primary mb-4">View Student Records</h2>

    <!-- Filter Form -->
    <form action="/view" method="GET" class="d-flex justify-content-center mb-4">
      <select name="subject" class="form-select w-50 me-3">
        <option value="">All Subjects</option>
        <% subjects.forEach(sub => { %>
          <option value="<%= sub.subject %>" <%= selectedSubject === sub.subject ? 'selected' : '' %>>
            <%= sub.subject %>
          </option>
        <% }) %>
      </select>
      <button type="submit" class="btn btn-success">View</button>
    </form>

    <!-- Records Table -->
    <% if (records.length > 0) { %>
      <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Roll No</th>
            <th>Name</th>
            <th>Course</th>
            <th>Subject</th>
            <th>Marks</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(record => { %>
            <tr>
              <td><%= record.id %></td>
              <td><%= record.roll_no %></td>
              <td><%= record.name %></td>
              <td><%= record.course %></td>
              <td><%= record.subject %></td>
              <td><%= record.marks %></td>
              <td>
                <a href="/edit/<%= record.id %>" class="btn btn-warning btn-sm">Edit</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <h5 class="text-center text-muted">No records found.</h5>
    <% } %>

    <div class="text-center mt-3">
      <a href="/home" class="btn btn-secondary">‚Üê Back</a>
    </div>
  </div>
</div>
