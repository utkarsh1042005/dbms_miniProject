<% layout('layout') %>

<h1 class="text-center text-primary mb-4">Welcome to Student Academic's Record Dashboard</h1>
<h3 class="text-center mb-4">What would you like to do?</h3>

<div class="d-flex justify-content-center flex-wrap gap-3">
  <form action="/create" method="get">
    <button class="btn btn-success btn-lg">Create a Record</button>
  </form>

  <form action="/view" method="get">
    <button class="btn btn-info btn-lg text-white">View Records</button>
  </form>

  <form action="/delete" method="get">
    <button class="btn btn-danger btn-lg">Delete Record</button>
  </form>
</div>
