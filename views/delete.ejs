<% layout('layout') %>

<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="text-center text-danger mb-4">Delete Student Record</h2>

    <form action="/delete" method="POST" class="mx-auto" style="max-width: 500px;">
      <div class="mb-3">
        <label class="form-label">Roll Number</label>
        <input type="text" name="roll_no" class="form-control" placeholder="Enter Roll No" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Student Name</label>
        <input type="text" name="name" class="form-control" placeholder="Enter Student Name" required>
      </div>

      <button type="submit" class="btn btn-danger w-100">Delete Record</button>
    </form>

    <div class="text-center mt-3">
      <a href="/home" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>
  </div>
</div>
